<div class="jumbotron">
	<h1 class="header">ReWork's Link Tagging Tool</h1>
</div>

<div class="box-container">
	<div class="container clmns center">  
	    <hr>

	    <div class="row center">
	        <div class="col-md-2 text-center">
	        </div>

	    <div class="row center">
	        <div class="col-md-8 text-center bottom-margin">
	          <div class="panel panel-default home">
	            <div class="panel-heading" id="left"><h2>Shorten Links</h2></div>
	            <div class="panel-body center", id="centerpanels">
	            	<form action="/shorten_links" method="get">
						<h3>Page URL: <%= text_field_tag(:original_url) %> </h3>
						<h3>Campaign: <%= text_field_tag(:campaign) %> </h3>
						<br>
						<br>
						<input type="submit" class="btn-primary" value="Build Short URL's">
					</form>
	            </div>

	          </div>
	        </div>

<div class="row">
<%- @all_campaigns.each do |x| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><a href="/campaign/<%= x['id'] %>"> <%= x['name'] %></a></h3>
        <p>Added on: <%= x['created_at'].to_s.split(" ")[0] %></p>
        <a style="color: red;" onClick="return confirm('Are you sure?')" href="/campaign/delete/<%= x['id'] %>">Delete</a>
      </div>
    </div>
  </div>


<% end %>
</div>